.container
  %ul
    - @comment.errors.full_messages.each do |msg|
      %li= msg

  = form_with(model: @comment, url: article_comments_path(@comment.article), local: true, data: { turbo: false }) do |f|
    %div
      = f.label :content, '内容'
    %div
      = f.text_area :content
    = f.submit '保存', class: 'btn-primary'