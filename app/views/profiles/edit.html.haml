.container
  %ul
    - @profile.errors.full_messages.each do |msg|
      %li= msg
  = form_with(model: @profile, url: profile_path, method: :put, local: true, data: { turbo: false }) do |f|
    %div= f.label :nickname, "ニックネーム"
    %div= f.text_field :nickname, class: "text"
    %div= f.label :introduction, "自己紹介"
    %div= f.text_area :introduction
    %div= f.label :gender, "性別"
    %div= f.select :gender, Profile.genders.keys,{prompt: "性別を選択してください。" },{class: 'text'}
    %div= f.label :birthday, "生年月日"
    %div= f.date_field :birthday, class: "text"
    %div
      = f.label :subscribed, "通知を受信"
      = f.check_box :subscribed
    =f.submit "保存", class: "btn-primary"